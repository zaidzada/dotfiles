# .bash_exports
#
# Environment variable exports

export EDITOR=$(which vim);

bold="";
reset="\e[0m";
black="\e[1;30m";
blue="\e[1;34m";
cyan="\e[1;36m";
green="\e[1;32m";
orange="\e[1;33m";
purple="\e[1;35m";
red="\e[1;31m";
violet="\e[1;35m";
white="\e[1;37m";
yellow="\e[1;33m";

userStyle=$([ "${USER}" == "root" ] && echo "${red}" || echo "${blue}")
hostStyle=$([ "${SSH_TTY}" ] && echo "${bold}${cyan}" || echo "${cyan}")

PS1="\[\033]0;\w\007\]";
PS1+="\[${bold}\]";
PS1+="\[${userStyle}\]\u"; # username
PS1+="\[${white}\] at ";   # at
PS1+="\[${hostStyle}\]\h"; # host
PS1+="\[${white}\] in ";   # in
PS1+="\[${green}\]\w ";    # working directory
PS1+="\[${white}\]\$ ";    # $
PS1+="\[${reset}\]";       # reset colors
export PS1;
